---
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import Bio from '@/components/Bio.astro'
import Gallery from '@/components/Gallery.astro'
import ExternalScripts from '@/components/ExternalScripts.astro'

let title = 'Solar Storm'
let description =
  'Trabalhei muito para chegar ao sucesso, mas não conseguiria nada se Deus não ajudasse. ~~ Ayrton Senna.'
---

<!doctype html>
<html lang="en">
  <BaseHead
    title={title}
    description={description}
    author={'artesdosul'}
    og={'og-image.jpg'}
  />

  <body class="is-preload">
    <Header title={title} />
    <Footer title={title} description={description} />
    <Bio title={title} description={description} />
    <Gallery title={title} description={description} />
    <ExternalScripts />
  </body>
</html>
